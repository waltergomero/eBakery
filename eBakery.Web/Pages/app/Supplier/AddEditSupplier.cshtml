@page
@model eBakery.Web.Pages.app.Supplier.AddEditSupplierModel
@{
    ViewData["Title"] = "AddEditSupplier";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card mb-12">
            <form asp-action="AddEditRepair" method="post" asp-controller="Property" class="form-horizontal" id="repairForm">
                <h6 class="card-header with-elements">
                    @Model.Title Supplier Information
                </h6>
                <div id="tasks-inner">
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SupplierVM.SupplierId" id="ProductId" />

                        <div class="form-group required row">
                            <label asp-for="SupplierVM.CompanyName" class="col-md-1 col-form-label">Company Name:</label>
                            <div class="col-md-3">
                                <input asp-for="SupplierVM.CompanyName" id="txtCompanyName" class="form-control" required />
                                <span asp-validation-for="SupplierVM.CompanyName" class="text-danger"></span>
                            </div>

                            <label asp-for="SupplierVM.ContactName" class="col-md-1 col-form-label">Contact Name:</label>
                            <div class="col-md-3">
                                <input asp-for="SupplierVM.ContactName" id="txtContactName" class="form-control" />
                                <span asp-validation-for="SupplierVM.ContactName" class="text-danger"></span>
                            </div>
                            <label asp-for="SupplierVM.ContactTitle" class="col-md-1 col-form-label">Contact Title:</label>
                            <div class="col-md-3">
                                <input asp-for="SupplierVM.ContactTitle" id="txtContactTitle" class="form-control" />
                                <span asp-validation-for="SupplierVM.ContactTitle" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group required row">
                            <label asp-for="SupplierVM.Address" class="col-md-1 col-form-label">Address:</label>
                            <div class="col-md-11">
                                <input asp-for="SupplierVM.Address" id="txtAddress" class="form-control" />
                                <span asp-validation-for="SupplierVM.Address" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group required row">
                            <label asp-for="SupplierVM.City" class="col-md-1 col-form-label">City:</label>
                            <div class="col-md-3">
                                <input asp-for="SupplierVM.City" id="txtCity" class="form-control" />
                                <span asp-validation-for="SupplierVM.City" class="text-danger"></span>
                            </div>
                            <label asp-for="SupplierVM.StateId" class="col-md-1 col-form-label">State:</label>
                            <div class="col-md-3">
                                <select class="form-control" asp-for="SupplierVM.StateId" asp-items="Model.stateIdSelected"></select>
                            </div>
                            <label asp-for="SupplierVM.ZipCode" class="col-md-1 col-form-label">Zip Code:</label>
                            <div class="col-md-3">
                                <input asp-for="SupplierVM.ZipCode" id="txtZipCode" class="form-control" />
                                <span asp-validation-for="SupplierVM.ZipCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SupplierVM.Phone" class="col-md-1 col-form-label">Phone:</label>
                            <div class="col-md-3">
                                <input asp-for="SupplierVM.Phone" id="txtPhone" class="form-control" />
                                <span asp-validation-for="SupplierVM.Phone" class="text-danger"></span>
                            </div>
                            <label asp-for="SupplierVM.Email" class="col-md-1 col-form-label">Email:</label>
                            <div class="col-md-3">
                                <input asp-for="SupplierVM.Email" id="txtUnitsOnOrder" class="form-control" />
                                <span asp-validation-for="SupplierVM.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="SupplierVM.Notes" class="col-md-1 col-form-label">Notes:</label>
                            <div class="col-md-11">
                                <input asp-for="SupplierVM.Notes" id="txtNotes" multiple class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <span style="color:red;" id="spCreateMessage">@Model.Message</span>
                            </div>
                        </div>
                    </div>
                    <hr class="m-0">
                </div>
                <div class="card-footer" style="text-align:right;">
                    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>


