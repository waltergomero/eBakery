@page
@model eBakery.Web.Pages.app.Supplier.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-info " id="nopcommerce-news-box">
            <div class="box-header with-border clearfix">
                <div class="box-title">
                    <i class="ion-md-image"></i>
                    Supplier
                </div>
                <div class="box-tools pull-right">
                    <a asp-page="./AddEditSupplier" asp-route-id="0" class="btn btn-primary btn-sm">Add new Supplier</a>
                </div>
            </div>
            <div class="box-body">
                <table id="tblSupplier" class="table table-striped table-bordered dt-responsive nowrap">
                    <thead>
                        <tr>
                            <th>Supplier Id</th>
                            <th>Company Name</th>
                            <th>Contact Name</th>
                            <th>Title</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>State</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.supplierVM)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SupplierId)
                            </td>
                            <td>
                                <a asp-page="./AddEditSupplier" asp-route-id="@item.SupplierId">@item.CompanyName</a>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ContactTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StateName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Phone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <a asp-page="./Index" asp-route-id="@item.SupplierId" class="btn btn-coffe btn-xs">Delete</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

